[source.crates-io]
replace-with = "vendored-sources"

[source."git+https://github.com/Smithay/smithay"]
git = "https://github.com/Smithay/smithay"
replace-with = "vendored-sources"

[source.vendored-sources]
directory = "vendor"

[build]
rustflags = ["-L", "/opt/homebrew/lib"]

[env]
PKG_CONFIG_PATH = "/opt/homebrew/lib/pkgconfig"
XDG_RUNTIME_DIR = "target/runtime_dir" # Set a default for cargo run convenience on macOS
